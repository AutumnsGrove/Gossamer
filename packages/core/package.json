{
  "name": "gossamer",
  "version": "1.0.0",
  "description": "ASCII visual effects library - Core rendering engine",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "ascii",
    "canvas",
    "visual-effects",
    "animation",
    "graphics",
    "text-art"
  ],
  "author": "AutumnsGrove",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AutumnsGrove/Gossamer.git",
    "directory": "packages/core"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
